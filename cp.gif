/*########################################################
# Animações
########################################################*/

@keyframes colors {
  0% {
      color: red;
  }
  20% {
      color: yellow;
  }
  40% {
      color: yellowgreen;
  }
  70% {
    color: orange;
  }
  80% {
    color: cyan;
  }
  100% {
    color: red;
  }
}

@keyframes slidetop {
	from{
		margin-top: -300%;
	}
	to{
		margin-top: 0%;

	}
}

@keyframes slidebottom {
	from{
		margin-bottom: -300%;
	}
	to{
		margin-top: 0%;

	}
}

@keyframes fade {
  to {
    opacity: 1;
  }
}

/*########################################################
# Style
########################################################*/

* {
  margin: 0px;
  padding: 0px;
  color: aliceblue;
  text-decoration: none;
}

html {
  background-image: url('../imgs/fundo-2.gif');
  background-repeat: none;
  background-size: cover;
}

body {
  background-color: rgba(0, 0, 0, 0.8);
  width: 100vw;
  height: 100vh;
}

.main {
  padding: 10%;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  /*display: flex;*/
}


.header {
  align-items: center;
  justify-content: center;
  flex-direction: column;
  display: flex;
}

.title{
  font-family: "Jersey 10";
  font-weight: 400;
  font-style: normal;
  font-size: 60px;
  text-align: center;
  opacity: 0;
  animation: fade 3s forwards, slidetop 0.5s;
}

.sub-title {
  animation: colors 1s infinite;
}

.button {
  font-family: "Expletus Sans", sans-serif;
  font-size: 18px;
  background-color: rgba(73, 76, 87, 0.5);
  padding: 6px;
  border-radius: 10px;
  opacity: 0;
  animation: fade 5s forwards;
}

.links:hover {
  animation: colors 0.5s ease-in-out infinite;

}


